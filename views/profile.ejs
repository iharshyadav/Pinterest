<% include ./Partial/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-200 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-16 text-black">
        <div class="relative">
            <button id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 shadow-xl">
                    <i class="text-zinc-800 ri-pencil-fill"></i>
            </button>
            <div class="w-32 h-32 bg-black rounded-full overflow-hidden"><img class="object-cover w-full h-full"
                src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-4">Harsh Yadav</h1>
        <h3 class="text-md mt-1">@username</h3>
        <a href="/edit" class="text-white px-7 mt-2 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
        <a href="/add"><button  class="px-7 py-2 text-white rounded-lg bg-red-700 text-xs font-semibold mt-4">Add New post</button></a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10 ml-28">
        <div class="card text-black">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="https://i.pinimg.com/564x/fa/eb/0a/faeb0a1770e87d3f6e98ec372b966c84.jpg">
            </div>
            <h3 class="text-xl font-semibold mt-3 ">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
        </div>
        
    </div>
    
</div>

<script>
    document.querySelector("#uploadicon").addEventListener("click", function () {
            document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change" , function(){
        document.querySelector("#uploadform").submit();
    })
    </script>
